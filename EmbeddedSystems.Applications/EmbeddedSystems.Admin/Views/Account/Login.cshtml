@model EmbeddedSystems.Admin.Controllers.AccountController.LoginModel

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(l => l.Email)
        @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Password)
        @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Password)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Persist) Remember Me
        </label>
    </div>
    <div class="col-lg-12 col-md-12">
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </div>
}
