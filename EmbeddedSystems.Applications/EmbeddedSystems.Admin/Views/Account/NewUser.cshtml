@model EmbeddedSystems.Admin.Controllers.AccountController.RegisterModel

<h2>Register</h2>

@using (Html.BeginForm("NewUser", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend style="display:none;"></legend>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Forename, "Forename")
                @Html.TextBoxFor(m => m.Forename, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Surname, "Surname")
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "E-mail")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Password")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password")
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </fieldset>
}