@model System.Globalization.CultureInfo
@using (Html.BeginForm("NewRental", "Rental"))
{
 @Html.AntiForgeryToken()
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Sprache <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "en", returnUrl = this.Request.RawUrl })">Englisch</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "es", returnUrl = this.Request.RawUrl })">Spanisch</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "de", returnUrl = this.Request.RawUrl })">Deutsch</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "fr", returnUrl = this.Request.RawUrl })">Französisch</a></li>
            <li class="divider"></li>
            <li><a>Stornieren</a></li>
        </ul>
    </div>
   

    <fieldset>
        <legend>Kiosk Registrieren</legend>

        <div class="panel panel-default text-center wideDiv">
            <div class="panel-body">
                Bitte geben Sie Ihre Daten ein:
            </div>
        </div>

        <form role="form">
            <div class="form-group">
                <label for="inputName">Name</label>
                <input data-val="true" data-val-required="Bitte geben Sie einen gültigen Namen." type="text" class="form-control" id="inputName" placeholder="Geben Sie Name" name="Name" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputAddress">Adresse</label>
                <input data-val="true" data-val-required="Bitte geben Sie eine gültige Adresse." type="text" class="form-control" id="inputAddress" placeholder="Adresse eingeben" name="Address" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Address" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputTelNumber">Telefonnummer</label>
                <input class="form-control" data-val="true" data-val-regex-pattern="^[0-9]{11}$" data-val-required="Bitte geben Sie eine gültige Telefonnummer." placeholder="Geben Sie die Telefonnummer" name="Tel" type="tel" value="" />
                    <span class="field-validation-valid help-block" data-valmsg-for="Tel" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail">E-Mail-Adresse</label>
                <input data-val="true" data-val-required="Bitte geben Sie eine gültige E-Mail-Adresse." type="email" class="form-control" id="inputEmail" placeholder="Ihre Email-Adresse" name="Email" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>

            <div class="panel panel-default text-center wideDiv">
            <div class="panel-body">
                Bitte wählen Sie Wissensstand:
            </div>
            </div>

            <div data-toggle="buttons">
                <label class="btn btn-default">
                    <input type="radio" />
                    Basisch
                </label>
                <label class="btn btn-default">
                    <input type="radio" />
                    Mittlere
                </label>
                <label class="btn btn-default">
                    <input type="radio" />
                    Fortgeschritten
                </label>
            </div>

            @Html.HiddenFor(ci => ci.DisplayName, new { id = "cultureName" })

            <button type="submit" class="btn btn-default">Einreichen</button>
        </form>


    </fieldset>
}

@section Scripts{
    <script type="text/javascript" src="//asset.jdibble.co.uk/script/form.min.js"></script>
}