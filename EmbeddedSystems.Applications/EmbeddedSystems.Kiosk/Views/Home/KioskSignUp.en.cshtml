@using (Html.BeginForm("GetForm", "Home"))
{
 @Html.AntiForgeryToken()
    
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Language <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "en", returnUrl = this.Request.RawUrl })">English</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "es", returnUrl = this.Request.RawUrl })">Spanish</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "de", returnUrl = this.Request.RawUrl })">German</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "fr", returnUrl = this.Request.RawUrl })">French</a></li>
            <li class="divider"></li>
            <li><a>Cancel</a></li>
        </ul>
    </div>
   

    <fieldset>
        <legend>Kiosk Sign Up</legend>

        <div class="panel panel-default text-center wideDiv">
            <div class="panel-body">
                Pls enta detels yo:
            </div>
        </div>

        <form role="form">
            <div class="form-group">
                <label for="inputFirstName">First Name</label>
                <input data-val="true" data-val-required="Please enter a valid first name." type="text" class="form-control" id="inputFirstName" placeholder="Enter First Name" name="FirstName" />
                <span class="field-validation-valid help-block" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputSurname">Surname</label>
                <input data-val="true" data-val-required="Please enter a valid surname." type="text" class="form-control" id="inputSurname" placeholder="Enter Surname" name="Surname" />
                <span class="field-validation-valid help-block" data-valmsg-for="Surname" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input data-val="true" data-val-required="Please enter a valid address." type="text" class="form-control" id="inputAddress" placeholder="Enter Address" name="Address" />
                <span class="field-validation-valid help-block" data-valmsg-for="Address" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputTelNumber">Telephone Number</label>
                <input class="form-control" data-val="true" data-val-regex-pattern="^[0-9]{11}$" data-val-required="Please enter a valid phone number." placeholder="Telephone Number" name="Tel" type="tel" value="" />
                <span class="field-validation-valid help-block" data-valmsg-for="Tel" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail">Email address</label>
                <input data-val="true" data-val-required="Please enter a valid email address." type="email" class="form-control" id="inputEmail" placeholder="Enter Email Address" name="Email" />
                <span class="field-validation-valid help-block" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox">
                    #Yolo Swaggins
                </label>
            </div>


            <div data-toggle="buttons">
                <label class="btn btn-default">
                    <input type="radio" />
                    Radio Button1
                </label>
                <label class="btn btn-default">
                    <input type="radio" />
                    Radio Button1
                </label>
                <label class="btn btn-default">
                    <input type="radio" />
                    Radio Button1
                </label>
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>


    </fieldset>
}

@section Scripts{
    <script type="text/javascript" src="//asset.jdibble.co.uk/script/form.min.js"></script>
}