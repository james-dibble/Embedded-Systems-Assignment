 @using (Html.BeginForm("GetForm", "Home"))
{
 @Html.AntiForgeryToken()
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Idioma <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "en", returnUrl = this.Request.RawUrl })">Inglés</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "es", returnUrl = this.Request.RawUrl })">Español</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "de", returnUrl = this.Request.RawUrl })">Alemán</a></li>
            <li><a href="@Url.Action("ChangeCulture", "Culture", new { lang = "fr", returnUrl = this.Request.RawUrl })">Francés</a></li>
            <li class="divider"></li>
            <li><a>Cancelar</a></li>
        </ul>
    </div>
   

    <fieldset>
        <legend>Kiosk Registrarme</legend>

        <div class="panel panel-default text-center wideDiv">
            <div class="panel-body">
                Por favor, ingrese sus datos a continuación:
            </div>
        </div>

        <form role="form">
            <div class="form-group">
                <label for="inputFirstName">Nombre de pila</label>
                <input data-val="true" data-val-required="Por favor ingrese un nombre válido." type="text" class="form-control" id="inputFirstName" placeholder="Ingrese el nombre" name="FirstName" />
                     <span class="field-validation-valid help-block" data-valmsg-for="FirstName" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputSurname">Apellido</label>
                <input data-val="true" data-val-required="Por favor, introduzca un apellido válido." type="text" class="form-control" id="inputSurname" placeholder="Ingrese Apellidos" name="Surname" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Surname" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputAddress">Dirección</label>
                <input data-val="true" data-val-required="Por favor, introduzca una dirección válida." type="text" class="form-control" id="inputAddress" placeholder="Introduzca la dirección" name="Address" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Address" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputTelNumber">Número de Teléfono</label>
                <input class="form-control" data-val="true" data-val-regex-pattern="^[0-9]{11}$" data-val-required="Por favor, introduzca un número de teléfono válido." placeholder="Ingresa el número de teléfono" name="Tel" type="tel" value="" />
                    <span class="field-validation-valid help-block" data-valmsg-for="Tel" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail">Dirección de correo electrónico</label>
                <input data-val="true" data-val-required="Por favor, introduce una dirección de correo electrónico válida." type="email" class="form-control" id="inputEmail" placeholder="Ingrese su dirección de correo electrónico" name="Email" />
                     <span class="field-validation-valid help-block" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox">
                    #Yolo Swaggins
                </label>
            </div>
            <button type="submit" class="btn btn-default">Presentar</button>
        </form>


    </fieldset>
}

@section Scripts{
    <script type="text/javascript" src="//asset.jdibble.co.uk/script/form.min.js"></script>
}